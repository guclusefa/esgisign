{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>School</th>
                <th>Students</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.name }}</td>
                <td>{{ promotion.year }} - {{ promotion.year + 1 }}</td>
                <td>{{ promotion.school.name }}</td>
                <td>{{ promotion.students.count }}
                    <ul>
                        {% for student in promotion.students %}
                            <li>{{ student.user.fullname }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('app_frontoffice_promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('app_frontoffice_promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_frontoffice_promotion_new') }}">Create new</a>
{% endblock %}
